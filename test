  <!-- Hidden Google Translate widget container -->
  <div id="google_translate_element"></div>

  <script>
  (function(){
    // ====== Search / Filter / Sort ======
    const input = document.getElementById('q');
    const btn   = document.getElementById('searchBtn');
    const clearBtn = document.getElementById('clearBtn');
    const pills = document.getElementById('quickTags');
    const sortSelect = document.getElementById('sortSelect');
    const table = document.getElementById('compareTable');

    let timer = null;
    input.addEventListener('input', () => { clearTimeout(timer); timer = setTimeout(applyFilter, 120); });
    btn.addEventListener('click', (e) => { e.preventDefault(); applyFilter(); });
    input.addEventListener('keydown', (e)=>{ if(e.key === 'Enter'){ e.preventDefault(); applyFilter(); } });
    clearBtn.addEventListener('click', ()=>{ input.value=''; updateURL(''); applyFilter(); input.focus(); });
    pills.addEventListener('click', (e)=>{
      const el = e.target.closest('[data-tag]');
      if(!el) return;
      const t = el.getAttribute('data-tag');
      const now = input.value.trim();
      input.value = now ? (now + ' ' + t) : t;
      applyFilter();
    });

    const urlQ = new URLSearchParams(location.search).get('q');
    if(urlQ){ input.value = urlQ; }

    sortSelect.addEventListener('change', ()=>{ sortTable(sortSelect.value); });
    applyFilter();

    function applyFilter(){
      const raw = input.value;
      updateURL(raw);
      const q = normalize(raw);
      if(!q){ showAll(); return; }
      const tokens = q.split(/\s+/).filter(Boolean);

      document.querySelectorAll('.grid .card').forEach(card => {
        const hay = normalize(card.innerText + ' ' + (card.dataset.tags || ''));
        const ok = tokens.every(t => hay.includes(t));
        card.style.display = ok ? '' : 'none';
      });

      table.querySelectorAll('tbody tr').forEach(tr => {
        const hay = normalize(tr.innerText + ' ' + (tr.dataset.tags || ''));
        const ok = tokens.every(t => hay.includes(t));
        tr.style.display = ok ? '' : 'none';
      });
    }
    function showAll(){ document.querySelectorAll('.grid .card, table.table tbody tr').forEach(el => el.style.display = ''); }
    function normalize(str){ return (str || '').toLowerCase().replace(/\s+/g, ' ').trim(); }
    function updateURL(q){
      const sp = new URLSearchParams(location.search);
      if(q && q.trim()) sp.set('q', q.trim()); else sp.delete('q');
      const newUrl = location.pathname + (sp.toString() ? ('?' + sp.toString()) : '');
      history.replaceState({}, '', newUrl);
    }
    function sortTable(mode){
      const tbody = table.querySelector('tbody');
      const rows = Array.from(tbody.querySelectorAll('tr'));
      let getKey;
      if(mode === 'rating-desc'){ getKey = r => parseFloat(r.dataset.rating || '0') * -1; }
      else if(mode === 'withdraw-asc'){ getKey = r => parseFloat(r.dataset.withdrawMin || r.dataset.withdrawmin || '999999'); }
      else { rows.forEach(r => tbody.appendChild(r)); return; }
      rows.sort((a,b)=> getKey(a) - getKey(b)).forEach(r => tbody.appendChild(r));
    }

    // ====== Google Translate Integration ======
    // We keep the official widget hidden, and control it via our custom <select>.
    const supported = ['en','ja','ko','es','zh-CN'];
    const langSelect = document.getElementById('langSelect');

    // Resolve initial language from browser; fallback to English
    function detectBrowserLang(){
      const raw = (navigator.language || (Intl.DateTimeFormat().resolvedOptions().locale) || 'en').toLowerCase();
      // Normalize to our supported codes
      if (raw.startsWith('ja')) return 'ja';
      if (raw.startsWith('ko')) return 'ko';
      if (raw.startsWith('es')) return 'es';
      if (raw.startsWith('zh')) return 'zh-CN';
      return 'en';
    }

    // Programmatically set Google combo when available
    function setGoogleTranslateLang(code){
      const combo = document.querySelector('select.goog-te-combo');
      if(!combo) return false;
      // Google uses: en, ja, ko, es, zh-CN
      combo.value = code;
      combo.dispatchEvent(new Event('change'));
      return true;
    }

    // Wait until Google injects the combo:
    function whenGComboReady(cb, tries=60){
      const combo = document.querySelector('select.goog-te-combo');
      if(combo) return cb(combo);
      if(tries <= 0) return;
      setTimeout(()=> whenGComboReady(cb, tries-1), 250);
    }

    // Custom select -> drive Google combo
    langSelect.addEventListener('change', ()=>{
      const code = langSelect.value;
      whenGComboReady(()=> setGoogleTranslateLang(code));
    });

    // Initial language (browser-based; if not supported -> English)
    const initial = supported.includes(detectBrowserLang()) ? detectBrowserLang() : 'en';
    langSelect.value = initial;

    // Once Google loads, apply initial selection
    window._applyInitialLang = function(){
      whenGComboReady(()=> setGoogleTranslateLang(initial));
    };

    // ====== Load Google Translate JS ======
    window.googleTranslateElementInit = function() {
      new google.translate.TranslateElement({
        pageLanguage: 'en',
        includedLanguages: 'en,ja,ko,es,zh-CN',
        layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
        autoDisplay: false
      }, 'google_translate_element');

      // Apply initial language
      _applyInitialLang();
    };
    const s = document.createElement('script');
    s.src = 'https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit';
    document.head.appendChild(s);

  })();
  </script>
</body>
</html>
